

<ul>
    <% for (var i in tips) { %>
        <% var tip = tips[i]; %>
        <% var isTipAuthor = session.user && tip.AuthorId && tip.AuthorId === session.user.id; %>

        <li>

            <% if (tip.accepted ||
                    (session.user && (session.user.isAdmin || (quizAuthorId && quizAuthorId === session.user.id)))) { %>

                <%= tip.text %>
		
		<small> Tip owner: <span id="autor"><% tip.Author ? tip.Author.username : "Desconocido" %></span></small>

            <% } %>

            <% if (!tip.accepted &&
                    (session.user && (session.user.isAdmin || (quizAuthorId && quizAuthorId === session.user.id)))) { %>

                <a href="/quizzes/<%= quizId %>/tips/<%= tip.id %>/accept?_method=PUT"><button>Aceptar</button></a>

            <% } %>

            <% if ((session.user && (session.user.isAdmin || (quizAuthorId && quizAuthorId === session.user.id))) || isTipAuthor) { %>

                <a href="/quizzes/<%= quizId %>/tips/<%= tip.id %>?_method=DELETE"><button>Borrar</button></a>

            <% } %>

        </li>
    <% } %>
</ul>
